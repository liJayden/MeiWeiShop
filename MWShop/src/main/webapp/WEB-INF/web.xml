<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>MWShop</display-name>
  <welcome-file-list>
    <welcome-file>jsp/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>springDispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springDispatcherServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>CategoryFilter</display-name>
    <filter-name>CategoryFilter</filter-name>
    <filter-class>com.etc.filter.CategoryFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CategoryFilter</filter-name>
    <url-pattern>/jsp/index.jsp</url-pattern>
    <url-pattern>/ExitController/ExitMethod</url-pattern>
    <url-pattern>/common/head.jsp</url-pattern>
    <url-pattern>/jsp/brand.jsp</url-pattern>
    <url-pattern>/ProductController/findProductByPid</url-pattern>
    <url-pattern>/CartController/addCart</url-pattern>
    <url-pattern>/jsp/mycart.jsp</url-pattern>
    <url-pattern>/OrderController/myOrder</url-pattern>
    <url-pattern>/OrderController/addOrder</url-pattern>
    <url-pattern>/ProductController/selectProductByCategoryID</url-pattern>
    <url-pattern>/SearchController/searchProduct</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>HotProductFilter</display-name>
    <filter-name>HotProductFilter</filter-name>
    <filter-class>com.etc.filter.HotProductFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HotProductFilter</filter-name>
    <url-pattern>/jsp/index.jsp</url-pattern>
    <url-pattern>/MWController/login</url-pattern>
    <url-pattern>/ProductController/findProductByPid</url-pattern>
    <url-pattern>/ExitController/ExitMethod</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>ProductFilter</display-name>
    <filter-name>ProductFilter</filter-name>
    <filter-class>com.etc.filter.ProductFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ProductFilter</filter-name>
    <url-pattern>/jsp/brand.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UnLoginFilter</filter-name>
    <filter-class>com.etc.filter.UnLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UnLoginFilter</filter-name>
    <url-pattern>/jsp/mycart.jsp</url-pattern>
    <url-pattern>/CartController/addCart</url-pattern>
    <url-pattern>/OrderController/myOrder</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>NewProductFilter</display-name>
    <filter-name>NewProductFilter</filter-name>
    <filter-class>com.etc.filter.NewProductFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NewProductFilter</filter-name>
    <url-pattern>/jsp/index.jsp</url-pattern>
    <url-pattern>/MWController/login</url-pattern>
    <url-pattern>/ExitController/ExitMethod</url-pattern>
  </filter-mapping>
  
  <listener>
  <listener-class>com.etc.listener.LoginSessionListener</listener-class>
  </listener>
  
</web-app>