	<script type="text/javascript">
	function change(){
		var img1 = document.getElementById("checkImg");
		img1.src="/MWShop/MWController/Code?"+new Date().getTime();
	}
	
	var value= "<%=request.getParameter("error") %>"
	if(value=="y"){
		alert("密码错误，请重新输入！")
	}else if(value=="c"){
		alert("验证码错误，请重新输入！")
	}
